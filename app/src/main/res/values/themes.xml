<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Karam" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_light</item>
        <item name="colorPrimaryVariant">@color/blue_light</item>
        <item name="colorOnPrimary">@color/white_new</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#4BCA81</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:itemBackground">@color/blue_light</item>
        <item name="popupMenuBackground">@color/blue_light</item>
        <item name="itemTextColor">@color/white_new</item>
        <item name="android:itemTextAppearance">@color/white_new</item>
        <item name="android:actionMenuTextColor">@color/white_new</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/yekan</item>

    </style>
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/blue_light</item>
        <item name="android:textColor">@color/white_new</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorPrimary">@color/white_new</item>
    </style>

</resources>